---
// BigTitle.astro
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<div class="relative w-full flex items-center justify-center overflow-hidden py-8 sm:py-16 pb-16">
  <h1
    class="text-5xl md:text-7xl lg:text-8xl font-extrabold text-center text-black animate-fade-in z-10 px-4"
    style={{
      textShadow: "0 4px 8px rgba(0,0,0,0.2)",
    }}
  >
    {title}
  </h1>
</div>

<style>
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(50px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }
</style>